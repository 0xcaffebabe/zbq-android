<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlterDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">18sp</item>
    </style>



    <declare-styleable name="MenuItemView">
        <attr name="leftIcon" format="reference"/>
        <attr name="title" format="string"/>
        <attr name="target" format="string"/>
    </declare-styleable>

    <declare-styleable name="TextBoxView">
        <attr name="leftText" format="string"/>
        <attr name="hint" format="string"/>
        <attr name="rightIcon" format="reference"/>
        <attr name="inputMode" format="string"/>
    </declare-styleable>

</resources>
